<p>最新の物語</p>
<div class="scrollable-container overflow-auto">
  <ul>
    <% @latest_stories.each do |latest_story| %>
      <li>
        <%= link_to latest_story.name, sho_story_story_path(latest_story) %><br>
        <%= latest_story.category %><br>
        閲覧数: <%= latest_story.views %> view
      </li>
    <% end %>
  </ul>
</div>

