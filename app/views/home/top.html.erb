<div>
  <ul class="wrapper">
    <% @popular_stories.each do |popular_story| %>
      <li class="list">
        <%= link_to popular_story.name, sho_story_story_path(popular_story) %><br>
        <%= popular_story.category %><br>
        閲覧数: <%= popular_story.views %> view
      </li>
    <% end %>
  </ul>
</div>


