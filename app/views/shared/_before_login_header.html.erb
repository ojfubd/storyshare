<header>
 <nav class='navbar navbar-expand-lg navbar-dark bg-dark'>
    <%= link_to 'StoryShare',root_path, class: 'navbar-brand', style: 'color:rgb(255, 22, 22);' %>
    <button class='navbar-toggler' data-bs-toggle='collapse' data-bs-target='#navbarContent'
      aria-controls='navbarContent' aria-expanded='false' aria-label='Toggle navigation'>
      <span class='navbar-toggler-icon'></span>
    </button>

    <%= search_form_for @q, url: search_stories_path, method: :get, class: 'd-flex ms-auto' do |f| %>
      <%= f.text_field :name_cont, class: 'form-control me-2', placeholder: '物語名で検索', aria: { label: 'Search' } %>
      <%= f.submit '検索', class: 'btn btn-outline-success' %>
    <% end %>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class='navbar-nav ms-auto' data-controller="base">
          <li class='nav-item'>
            <%= link_to 'ログイン', login_path, class: 'nav-link' %>
          </li>
          <li class='nav-item'>
            <%= link_to 'ゲストログイン', guest_sign_in_path, class: 'nav-link', data: { "turbo-method": :post }%>
          </li>
          <li class='nav-item'>
            <%= link_to 'サインアップ', signup_path, class: 'nav-link' %>
          </li>
          <li class='nav-item'>
            <%= link_to 'Googleでログイン', auth_at_provider_path(provider: :google), class: 'nav-link'%>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>